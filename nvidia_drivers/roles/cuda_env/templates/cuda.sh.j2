#!/bin/sh

# Add Cuda to path if it is not there already
[[ ":$PATH:" != *":/usr/local/cuda/bin:"* ]] && export PATH="/usr/local/cuda/bin:${PATH}"

# Add LD_LIBRARY_PATH
[[ ":$LD_LIBRARY_PATH:" != *":/usr/local/cuda/lib64:"* ]] && export LD_LIBRARY_PATH="/usr/local/cuda/lib64:${LD_LIBRARY_PATH}"

export CUDADIR=/usr/local/cuda

